@{
    ViewData["Title"] = "Esqueci minha senha";

    var adminEmail = (ViewBag.AdminEmail as string) ?? "suporte@cardapius.com.br";
    var adminPhone = (ViewBag.AdminPhone as string) ?? "(45) 99934-2864";
    var loginUrl = (ViewBag.LoginUrl as string) ?? Url.Content("~/Account/Login");

    var brandName = (ViewBag.BrandName as string) ?? "Cardapius";
    var brandUrl = (ViewBag.BrandUrl as string) ?? "https://cardapius.com.br";
    var supportEmail = (ViewBag.SupportEmail as string) ?? "suporte@cardapius.com.br";
    var supportPhone = (ViewBag.SupportPhone as string) ?? "(45) 99934-2864";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <style>
        :root {
            --surface: #ffffff;
            --line: #e5e7eb; /* borda leve */
            --text: #111827; /* cinza-900 */
            --muted: #6b7280; /* cinza-500 */
            --primary: #1d4ed8; /* azul do botão */
            --primary-700: #1e40af; /* hover */
            --shadow: 0 10px 25px rgba(0,0,0,.06);
            --radius: 14px;
        }

        * {
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
        }

        body {
            margin: 0;
            background: #ffffff; /* tela limpa como o seu login */
            font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;
            color: var(--text);
        }

        .page {
            min-height: 100vh;
            display: grid;
            place-items: center;
            padding: 24px;
        }

        .card {
            width: min(420px, 92vw);
            background: var(--surface);
            border: 1px solid var(--line);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            padding: 28px 28px 22px;
        }

        .brand {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 14px;
        }

            .brand .logo {
                width: 36px;
                height: 36px;
                display: grid;
                place-items: center;
                border-radius: 10px;
                border: 1px solid #edeef2;
                background: #fafafa;
            }

        .title {
            font-size: 18px;
            margin: 0 0 6px 0;
            font-weight: 700;
        }

        .subtitle {
            margin: 0 0 16px 0;
            color: var(--muted);
            font-size: 14px;
        }

        .notice {
            background: #f8fafc;
            border: 1px solid #e5e7eb;
            border-radius: 12px;
            padding: 12px 14px;
            font-size: 14px;
            color: #334155;
        }

        .actions {
            margin-top: 18px;
            display: grid;
            gap: 10px;
        }

        .btn {
            appearance: none;
            border: none;
            outline: none;
            display: inline-flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            padding: 12px 14px;
            border-radius: 10px;
            font-weight: 700;
            letter-spacing: .3px;
            cursor: pointer;
            text-decoration: none;
        }

        .btn-primary {
            background: var(--primary);
            color: #fff;
        }

            .btn-primary:hover {
                background: var(--primary-700);
            }

        .link {
            display: inline-block;
            margin-top: 12px;
            font-size: 13px;
            color: #2563eb;
            text-decoration: underline;
            text-underline-offset: 3px;
        }

        .footer {
            margin-top: 22px;
            text-align: center;
            color: var(--muted);
            font-size: 12px;
        }

            .footer a {
                color: #2563eb;
            }

        .support {
            margin-top: 6px;
            font-size: 12px;
            color: #6b7280;
        }
    </style>
</head>
<body>
    <main class="page">
        <section class="card" role="region" aria-labelledby="title">
            <div class="brand">
                <span class="logo" aria-hidden="true">
                    <svg viewBox="0 0 24 24" width="22" height="22" fill="none" stroke="#7c3aed" stroke-width="1.6">
                        <path d="M12 3l7 3v5c0 4.5-3.3 8.3-7 9-3.7-.7-7-4.5-7-9V6l7-3z" />
                        <path d="M9 12l2 2 4-4" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </span>
                <div>
                    <h1 id="title" class="title">Esqueceu sua senha?</h1>
                    <p class="subtitle">Sem campos aqui, seguimos sua política de segurança.</p>
                </div>
            </div>

            <div class="notice">
                Para alterar sua senha, <strong>entre em contato com o administrador da sua empresa</strong>.
                Por segurança, a redefinição não é feita diretamente no sistema.
            </div>


            <div style="margin-top:8px;">
                <a class="link" href="@loginUrl">Voltar para o login</a>
            </div>

            <div class="footer">
                Desenvolvido por <a href="@brandUrl" target="_blank" rel="noopener">@brandName</a>
                <div class="support">
                    @supportEmail<br />
                    @supportPhone
                </div>
            </div>
        </section>
    </main>
</body>
</html>
